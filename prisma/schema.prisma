generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String            @id @default(cuid())
  name              String?
  email             String            @unique
  avatarUrl         String?
  createdAt         DateTime          @default(now())
  roomUsers         RoomUser[]
  vote              Vote[]
  createdRooms      Room[]            @relation("RoomCreator")
  addedHistory      PlaybackHistory[] @relation("HistoryAdder")

  @@index([email])
  @@index([createdAt])
}

model Room {
  roomId        String            @id
  roomName      String
  createdById   String
  accessMode    AccessMode        @default(Public)
  passwordHash  String?
  themeId       String?
  createdAt     DateTime          @default(now())
  createdBy     User              @relation("RoomCreator", fields: [createdById], references: [id])
  roomUsers     RoomUser[]
  history       PlaybackHistory[]

  @@index([createdById])
  @@index([createdAt])
  @@index([accessMode])
}

model RoomUser {
  id       String   @id @default(cuid())
  roomId   String
  userId   String
  room     Room     @relation(fields: [roomId], references: [roomId])
  user     User     @relation(fields: [userId], references: [id])
  lastSeen DateTime @default(now())
  muted    Boolean  @default(false)

  @@unique([roomId, userId])
  @@index([roomId])
  @@index([userId])
  @@index([lastSeen])
}

model Song {
  id           String            @id @default(cuid())
  youtubeId    String            @unique
  title        String
  channelName  String
  image        String?
  duration     String
  tags         String[]
  history      PlaybackHistory[]
}

model Vote {
  id           String    @id @default(cuid())
  queueEntryId String
  userId       String
  user         User      @relation(fields: [userId], references: [id])
  value        Int
  createdAt    DateTime  @default(now())

  @@unique([queueEntryId, userId])
}

model PlaybackHistory {
  id           String     @id @default(cuid())
  roomId       String
  songId       String
  queueEntryId String?
  addedById    String?
  room         Room       @relation(fields: [roomId], references: [roomId])
  song         Song       @relation(fields: [songId], references: [id])
  addedBy      User?      @relation("HistoryAdder", fields: [addedById], references: [id])
  playedAt     DateTime   @default(now())
  duration     Int
}

enum QueueStatus {
  Queued
  Playing
  Skipped
}

enum AccessMode {
  Public
  Private
}
